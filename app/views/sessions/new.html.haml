#log-in
  - form_tag session_path do
    %p
      = label_tag 'Username'
      = text_field_tag 'login', @login

    %p
      = label_tag "Password"
      = password_field_tag 'password'

    %p
      = label_tag 'remember_me', 'Remember me'
      = check_box_tag 'remember_me', '1', @remember_me

    %p= submit_tag 'Log in'
